<Window x:Class="MoneyTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyTracker.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Menú lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Contenido -->
        </Grid.ColumnDefinitions>

        <!-- Menú lateral -->
        <StackPanel Background="#2C3E50" VerticalAlignment="Stretch">
            <TextBlock Text="Money Tracker" Foreground="White" FontSize="16" Margin="10"/>
            <Button Content="Dashboard" Margin="10" Click="Dashboard_Click" />
            <Button Content="Income" Margin="10" Click="Income_Click" />
            <Button Content="Expenses" Margin="10" Click="Expenses_Click" />
            <Button Content="Monthly Summary" Margin="10" Click="Summary_Click" />
        </StackPanel>

        <!-- Zona de navegación -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Margin="10"/>
    </Grid>
</Window>
