<Window x:Class="MoneyTracker.Views.Dialogs.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow"
        Background="White"
        Height="222" Width="400"
        Title="{Binding DialogTitle, FallbackValue=Confirm}">
    
    <StackPanel Margin="20">
        <!--Title-->
        <TextBlock x:Name="DialogTitleBlock" Text="{Binding DialogTitle}" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"></TextBlock>
       
        <!--Message-->
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,20" TextAlignment="Center"></TextBlock>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Confirm buttons -->
            <StackPanel x:Name="ConfirmationButtons" Orientation="Horizontal">
                <Button Content="Yes" Width="80" Margin="10,0" Click="Yes_Click"/>
                <Button Content="No" Width="80" Margin="10,0" Click="No_Click"/>
            </StackPanel>

            <!-- Info button -->
            <StackPanel x:Name="InfoButton" Orientation="Horizontal">
                <Button Content="OK" Width="80" Margin="10,0" Click="Ok_Click" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
