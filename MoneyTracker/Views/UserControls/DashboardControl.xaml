<UserControl x:Class="MoneyTracker.Views.UserControls.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MoneyTracker.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:local="clr-namespace:MoneyTracker.Converters"
             xmlns:conv="clr-namespace:MoneyTracker.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:IncomeToIconConverter x:Key="IncomeToIconConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:DashboardViewModel />
    </UserControl.DataContext>

    <Grid Background="#FFF5F5F5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="{Binding CurrentMonth, StringFormat='Personal Finance Dashboard - {0}'}"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Resumen general -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#DFF0D8" CornerRadius="10" Padding="8" Margin="5">
                <StackPanel>
                    <TextBlock Text="Total Income" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalIncome, StringFormat=' {0:C}'}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#F2DEDE" CornerRadius="10" Padding="8" Margin="5">
                <StackPanel>
                    <TextBlock Text="Total Expenses" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalExpenses, StringFormat=' {0:C}'}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#D9EDF7" CornerRadius="10" Padding="8" Margin="5">
                <StackPanel>
                    <TextBlock Text="Balance" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Balance, StringFormat=' {0:C}'}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Datos del mes -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FCF8E3" CornerRadius="10" Padding="8" Margin="5">
                <StackPanel>
                    <TextBlock Text="Monthly Income" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MonthlyIncome, StringFormat=' {0:C}'}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#FCF8E3" CornerRadius="10" Padding="8" Margin="5">
                <StackPanel>
                    <TextBlock Text="Monthly Expenses" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MonthlyExpenses, StringFormat=' {0:C}'}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Gráficas y actividad -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Gráfica -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="5" Padding="10" BorderBrush="#DDD" BorderThickness="1" MaxHeight="350" VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="Income vs Expenses (by Week)" FontWeight="Bold" FontSize="14" Foreground="#333" Margin="0,0,0,10"/>
                    <lvc:CartesianChart Series="{Binding WeeklySeries}" Height="250" LegendPosition="Right" XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"/>
                </StackPanel>
            </Border>

            <!-- Actividad reciente -->
            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <Border Background="WhiteSmoke" CornerRadius="10" Margin="0,0,0,10" Padding="10" BorderBrush="#DDD" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontWeight="Bold" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding RecentTransactions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding IsIncome, Converter={StaticResource IncomeToIconConverter}}" FontSize="14" Margin="0,0,5,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Date, StringFormat='{}{0:dd MMM yyyy}'}" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12"/>
                                            <TextBlock Text="{Binding Amount, StringFormat='Amount: {0:C}'}" FontSize="12" Foreground="#333"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
