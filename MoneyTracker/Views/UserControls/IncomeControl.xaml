<UserControl x:Class="MoneyTracker.Views.UserControls.IncomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MoneyTracker.ViewModels"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundGradient}">

    <UserControl.DataContext>
        <vm:IncomeViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Add New Income"  Style="{StaticResource TitleTextBlockStyle}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Form -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Description" Foreground="{StaticResource TextPrimaryColor}"  Margin="0,0,0,5" />
            <TextBox Text="{Binding Description, Mode=TwoWay}" Margin="0,0,0,10" />

            <TextBlock Text="Amount" Foreground="{StaticResource TextPrimaryColor}"  Margin="0,0,0,5"/>
            <TextBox Text="{Binding Amount, Mode=TwoWay}" Margin="0,0,0,10" />

            <TextBlock Text="Source" Foreground="{StaticResource TextPrimaryColor}"  Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Sources}"
                      SelectedItem="{Binding Source, Mode=TwoWay}"
                      Margin="0,0,0,10" />

            <TextBlock Text="Date" Foreground="{StaticResource TextPrimaryColor}"  Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay}" Margin="0,0,0,20" />

            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Save" Width="100" Style="{StaticResource SaveButton}"  HorizontalAlignment="Center" Command="{Binding SaveIncomeCommand}" Margin="0,0,10,0"/>
                <Button Content="Delete" Width="100" Style="{StaticResource DeleteButton}" HorizontalAlignment="Center" Command="{Binding DeleteIncomeCommand}" Margin="0,0,10,0"/>
            </StackPanel>
           
        </StackPanel>

        <!-- DataGrid -->
        <StackPanel Grid.Row="2">
            <TextBlock Text=" Your Income" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <ComboBox ItemsSource="{Binding AvailableYears}" 
              SelectedItem="{Binding SelectedYear}" 
              Width="100" Margin="0,0,10,0" />

                <ComboBox ItemsSource="{Binding AvailableMonths}" 
              SelectedItem="{Binding SelectedMonth}" 
                          DisplayMemberPath="MonthName"
              Width="100" />
            </StackPanel>

            <DataGrid ItemsSource="{Binding Incomes}" AutoGenerateColumns="False" CanUserAddRows="False"
                      AlternatingRowBackground="LightGray" HeadersVisibility="Column" Margin="10"
                      IsReadOnly="True" VerticalScrollBarVisibility="Auto" Height="200"
                      SelectedItem="{Binding SelectedIncome, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="100" />
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" Width="120" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock   Text="{Binding TotalIncome, StringFormat='Total Income: {0:C}'}"  Style="{StaticResource SummaryTextBlockStyle}"  />
        </StackPanel>
    </Grid>
</UserControl>

