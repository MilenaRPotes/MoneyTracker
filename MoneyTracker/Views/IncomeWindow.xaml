<Window x:Class="MoneyTracker.Views.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MoneyTracker.ViewModels"
        mc:Ignorable="d"
        Title="IncomeWindow" Height="689" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:IncomeViewModel> </vm:IncomeViewModel>
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ></RowDefinition> <!--Title-->
            <RowDefinition Height="Auto" ></RowDefinition> <!--Form-->
            <RowDefinition Height="*" ></RowDefinition> <!--DataGrid-->
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Add New Income" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"></TextBlock>
        
        <!-- Form -->
        <StackPanel  Orientation="Vertical" Grid.Row="1" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Description"></TextBlock>
            <TextBox Text="{Binding Description, Mode=TwoWay}" Margin="0,0,0,10"></TextBox>
            
            <TextBlock Text="Amount"></TextBlock>
            <TextBox Text="{Binding Amount, Mode=TwoWay}" Margin="0,0,0,10"></TextBox> 
            
            <TextBlock Text="Source"></TextBlock>
            <ComboBox ItemsSource="{Binding Sources}"
                      SelectedItem="{Binding Source, Mode=TwoWay}"
                      Margin="0,0,0,10"></ComboBox>

            <TextBlock Text="Date"></TextBlock>
            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay}" Margin="0,0,0,20"></DatePicker>

            <Button Content="Save" Width="100" HorizontalAlignment="Center" Command="{Binding SaveIncomeCommand}"></Button>
            <Button Content="Delete" Width="100" HorizontalAlignment="Center" Command="{Binding DeleteIncomeCommand}" Margin="0,10,0,0"></Button>
            
        </StackPanel>
        
        <!--DataGrid-->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Your Income" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"></TextBlock>

            <DataGrid  ItemsSource="{Binding Incomes}" AutoGenerateColumns="False"   CanUserAddRows="False" AlternatingRowBackground="LightGray" HeadersVisibility="Column" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Height="200" SelectedItem="{Binding SelectedIncome, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount,StringFormat={}{0:C}}" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="150"></DataGridTextColumn>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date,StringFormat=\{0:yyyy-MM-dd\}}" Width="120"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="{Binding TotalIncome, StringFormat='Total Income: {0:C}'}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,20,0" ></TextBlock>
        </StackPanel>
       
      
    </Grid>
</Window>
